<PropertyList include="dhc6-base.xml">
    <sim>
        <description>De Havilland Canada DHC-6 Twin Otter (floats)</description>
        <long-description>The DHC-6-300 Twin Otter from de Havilland Canada is a 20 seat,
            twin turboprop, high wing aircraft with a fixed tricycle gear. First flown in 1996,
            the aircraft still enjoys great popularity among skydivers and as a bush plane due
            to it's powerful engines and it's robustness and versatility. Moreover it can
            easily be equipped with floats and skis.
        </long-description>
        <de>
            <long-description>Die DHC-6-300 Twin Otter von de Havilland Canada ist ein 20-sitziger Hochdecker
                mit zwei Turboprop-Triebwerken und einem festen Dreibeinfahrwerk. Ihr Erstflug war 1969
                und auch heute noch erfreut sie sich dank ihrer starken Treibwerke und ihrer Robustheit
                und Vielseitigkeit gro√üer Beliebtheit bei Fallschirmspringern und als Buschflugzeug.
                Zudem kann sie einfach mit Schwimmern und Skiern ausgestattet werden.
            </long-description>
        </de>
        <author>Syd Adams (Initial model), Christian Thiriot (3D, Textures), Bo Lan (Nasal, FDM, Systems), Jonathan Schellhase (3D, Nasal, Systems, Sound, misc)</author>
        <flight-model>yasim</flight-model>
        <aero>dhc6F</aero>
        <type type="string">seaplane</type>
        <variant-of>dhc6</variant-of>

        <fuel-fraction>0.5</fuel-fraction>
        <startup>
            <splash-texture>Aircraft/dhc6/Splash_screens/dhc6F-splash1.png</splash-texture>
            <splash-texture>Aircraft/dhc6/Splash_screens/dhc6F-splash2.png</splash-texture>
            <splash-texture>Aircraft/dhc6/Splash_screens/dhc6F-splash3.png</splash-texture>
            <splash-texture>Aircraft/dhc6/Splash_screens/dhc6F-splash4.png</splash-texture>
        </startup>
         <model>
            <path>Aircraft/dhc6/Models/DHC6F.xml</path>
            <blunt-nose type="bool">0</blunt-nose>
            <equipment>
                <left-tiedown-wheels type="bool">0</left-tiedown-wheels>
                <right-tiedown-wheels type="bool">0</right-tiedown-wheels>
                <rear-tiedown-wheels type="bool">0</rear-tiedown-wheels>
                <left-chock-fwd type="bool">0</left-chock-fwd>
                <left-chock-aft type="bool">0</left-chock-aft>
                <right-chock-fwd type="bool">0</right-chock-fwd>
                <right-chock-aft type="bool">0</right-chock-aft>
            </equipment>
        </model>

    <hitches>
        <aerotow>
            <tow>
                <length type="float">60</length>
                <elastic-constant type="float">10000</elastic-constant>
                <weight-per-m-kg-m type="float">1</weight-per-m-kg-m>
                <dist type="float">1</dist>
                <connected-to-property-node type="bool"></connected-to-property-node>
                <brake-force type="float">100000</brake-force>
                <connected-to-ai-or-mp-callsign type ="string">*</connected-to-ai-or-mp-callsign>
                <end-force-x type ="float">0</end-force-x>
                <end-force-y type ="float">0</end-force-y>
                <end-force-z type ="float">0</end-force-z>
            </tow>
            <speed-in-tow-direction type="float">0</speed-in-tow-direction>
            <open type="bool">true</open>
            <local-pos-x type="float">0</local-pos-x>
            <local-pos-y type="float">0</local-pos-y>
            <local-pos-z type="float">0</local-pos-z>
            <is-slave type="bool">false</is-slave>
        </aerotow>
    </hitches>

</sim>

<controls>
        <gear>
            <brake-parking>1</brake-parking>
            <water-rudder-pos type="double">0</water-rudder-pos>
            <water-rudder-down type="bool">0</water-rudder-down>
        </gear>
</controls>


  <hitch name="aerotow" x="-6.2" y="0" z="-0.12"  force-is-calculated-by-other="1">
  <tow length="60" weight-per-meter="0.035" elastic-constant="9000" break-force="10000" mp-auto-connect-period="1.0"/>
  <winch max-tow-length="1000" min-tow-length="60" initial-tow-length="60"/>
</hitch>

</PropertyList>
