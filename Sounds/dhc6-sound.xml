<PropertyList>

  <fx>
   <stall>
      <name>fire-test</name>
      <path>Aircraft/dhc6/Sounds/dhc6-alarm.wav</path>
      <mode>looped</mode>
      <property>controls/engines/fire-test</property>
      <condition>
	<and>
	  <equals>
	    <property>controls/engines/fire-test</property>
	    <value>1</value>
	  </equals>
	  <greater-than>
	    <property>systems/electrical/volts</property>
	    <value>0</value>
	  </greater-than>
	</and>
      </condition>
      <volume>
	<factor>1</factor>
      </volume>
    </stall>
