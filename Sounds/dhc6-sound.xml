<!-- Engine 1 exterior-->

        <prop>
            <name>propeller1</name>
            <mode>looped</mode>
            <path>Aircraft/dhc6/Sounds/fullpower.wav</path>
            <property>sim/sound/engine[0]</property>
            <condition>
                <and>
                    <greater-than>
                        <property>controls/engines/engine[0]/condition</property>
                        <value>0.001</value>
                    </greater-than>
                    <not>
                        <property>sim/current-view/internal</property>
                    </not>
                </and>
            </condition>
            <volume>
                <property>sim/sound/engine[0]</property>
                <factor>1.2</factor>
            </volume>
            <pitch>
                <property>sim/sound/engine[0]</property>
                <factor>1.1</factor>
                <offset>0.5</offset>
            </pitch>
            <position>
                <x>-1.5</x>
                <y>2.6</y>
                <z>-0.33</z>
            </position>
            <reference-dist>20.0</reference-dist>
            <max-dist>5000.0</max-dist>
        </prop>

        <prop>
            <name>propeller1-int</name>
            <reference-dist>2.0</reference-dist>
            <max-dist>10.0</max-dist>
            <mode>looped</mode>
            <path>Aircraft/dhc6/Sounds/fullpower-int.wav</path>
            <property>sim/sound/engine[0]</property>
            <condition>
                <and>
                    <greater-than>
                        <property>controls/engines/engine[0]/condition</property>
                        <value>0.001</value>
                    </greater-than>
                    <greater-than>
                        <property>engines/engine[0]/n2</property>
                        <value>10</value>
                    </greater-than>
                    <not>
                        <property>controls/engines/engine[0]/cutoff</property>
                    </not>
                    <property>sim/current-view/internal</property>
                 </and>
            </condition>
            <volume>
                <property>sim/sound/engine[0]</property>
                <factor>1.0</factor>
                <offset>0.3</offset>
            </volume>
            <pitch>
                <property>sim/sound/engine[0]</property>
                <factor>1.1</factor>
                <offset>0.5</offset>
            </pitch>
            <position>
                <x>-1.5</x>
                <y>2.6</y>
                <z>-0.33</z>
            </position>
        </prop>

