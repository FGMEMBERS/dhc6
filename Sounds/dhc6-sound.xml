            </volume>
            <position>
                <x>0</x>
                <y>0</y>
                <z>-2</z>
            </position>
        </squeal>

        <flap>
            <name>flaps</name>
            <mode>in-transit</mode>
            <path>Sounds/flaps.wav</path>
            <property>surface-positions/flap-pos-norm</property>
            <volume>
                <property>sim/sound/cabin</property>
            </volume>
            <position>
                <x>-3</x>
                <y>0</y>
                <z>0.5</z>
            </position>
            <reference-dist>2.0</reference-dist>
            <max-dist>5.0</max-dist>
        </flap>

        <wind>
            <name>wind</name>
            <condition>
                <property>sim/current-view/internal</property>
            </condition>
            <mode>looped</mode>
            <path>Sounds/wind.wav</path>
            <volume>
                <property>sim/sound/cabin</property>
            </volume>
            <position>
                <x>-5</x>
                <y>0</y>
                <z>0</z>
            </position>
            <volume>
                <property>position/altitude-ft</property>
                <factor>-0.000015</factor>
                <offset>1.0</offset>
                <min>0</min>
                <max>0.5</max>
            </volume>
            <volume>
                <property>velocities/airspeed-kt</property>
                <factor>0.0015</factor>
                <min>0.0</min>
                <max>0.25</max>
            </volume>
            <pitch>
                <property>velocities/airspeed-kt</property>
                <factor>0.01</factor>
                <offset>1.0</offset>
            </pitch>
            <position>
                <x>-3</x>
                <y>0</y>
                <z>0.5</z>
            </position>
            <reference-dist>1.0</reference-dist>
            <max-dist>2.0</max-dist>
        </wind>

