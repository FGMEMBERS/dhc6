<?xml version="1.0" encoding="UTF-8"?>

<!-- Aircraft-specific menu for the DHC-6 Twin Otter -->

<PropertyList>

    <default>

        <menu n="10">

            <label>DHC-6</label>

            <enabled type="bool">true</enabled>

            <item>
                <label>Autostart</label>
                <binding>
                    <command>property-toggle</command>
                    <property>sim/model/autostart</property>
                </binding>
            </item>

            <item>
                <label>Options</label>
                <binding>
                    <command>nasal</command>
                    <script>fgcommand("dialog-show", props.Node.new({"dialog-name": "options"}));</script>
                </binding>
            </item>

            <item>
                <label>Throttles</label>
                <binding>
                    <command>nasal</command>
                    <script>fgcommand("dialog-show", props.Node.new({"dialog-name": "throttles"}));</script>
                </binding>
            </item>

            <item>
                <label>Flashlight</label>
                <binding>
                    <command>nasal</command>
                    <script>dhc6.toggle_flashlight()</script>
                </binding>
            </item>

            <item>
                <label>Select Livery</label>
                <binding>
                    <command>nasal</command>
                    <script>aircraft.livery.dialog.open()</script>
                </binding>
            </item>

            <item>
                <label>DHC-6 wiki page</label>
                <binding>
                    <command>open-browser</command>
                    <path>http://wiki.flightgear.org/De_Havilland_Canada_DHC-6_Twin_Otter</path>
                </binding>
            </item>

        </menu>

    </default>

</PropertyList>
